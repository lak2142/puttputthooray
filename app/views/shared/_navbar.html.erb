<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <!-- Brand and toggle get grouped for better mobile display -->
  <div class="container">
    <div class="navbar-header">
      <%= link_to "NextGenGolf", root_path, class: 'navbar-brand' %>
    </div>

    <% if current_user %>
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <% if current_user.is_course_manager? %>
          <ul class="nav navbar-nav">
            <li><%= link_to "Your courses", rates_course_manager_index_path %></li>
          </ul>
          <ul class="nav navbar-nav">
            <li><%= link_to "Host tournament", host_course_manager_index_path %></li>
          </ul>
        <% else %>
          <ul class="nav navbar-nav">
            <li><a href="#">View Pass</a></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Profile<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Edit Profile', edit_profile_path(current_user.id) %></a></li>
                <li><%= link_to 'Your offers', offers_profile_index_path %></a></li>
              </ul>
            </li>

            <% if current_user.has_admin_privilege? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin<b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><%= link_to 'Colleges', admin_colleges_path %></a></li>
                  <li><%= link_to 'Courses', courses_path %></a></li>
                  <li><%= link_to 'Teams', teams_path %></a></li>
                  <li><%= link_to 'Members', members_admin_index_path %></a></li>
                </ul>
              </li>
            <% end %>
            <% if current_user.has_super_admin_privilege? %>
              <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Reports<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><a href="#">Action</a></li>
                <li><a href="#">Another action</a></li>
                <li><a href="#">Something else here</a></li>
                <li class="divider"></li>
                <li><a href="#">Separated link</a></li>
                <li class="divider"></li>
                <li><a href="#">One more separated link</a></li>
              </ul>
              </li>
            <% end %>
          </ul>
        <% end %>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to current_user.email %></li>
          <li><%= link_to 'Logout', destroy_user_session_path, :method => :delete %></li>
        </ul>
      </div><!-- /.navbar-collapse -->
    <% end %>
  </div>
</div>

