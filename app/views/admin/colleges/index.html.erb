<h2>Listing colleges</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip code</th>
      <th>Website</th>
      <th>Lat</th>
      <th>Lon</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <%= paginate @colleges %>
  <tbody>
    <% @colleges.each do |college| %>
      <tr>
        <td><%= college.name %></td>
        <td><%= college.address %></td>
        <td><%= college.city %></td>
        <td><%= college.state %></td>
        <td><%= college.zip_code %></td>
        <td><%= college.website %></td>
        <td><%= college.lat %></td>
        <td><%= college.lon %></td>
        <td><%= link_to 'Show', admin_college_path(college) %></td>
        <td><%= link_to 'Edit', edit_admin_college_path(college) %></td>
        <td><%= link_to 'Destroy', admin_college_path(college), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

