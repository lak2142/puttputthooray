<h3>Add User</h3>
<div class="row form-group nxtform" id='add-member'>
  <%= form_tag(add_user_profile_index_path) do %>
    <div class="col-md-4">
      <div class="form-group"><%= text_field_tag 'email', nil, type: "email", class: "form-control", id: "email", placeholder: "Enter email address" %></div>
      <div class="form-group"><%= label_tag 'select role' %><%= select_tag(:role_type_id, options_from_collection_for_select(RoleType.all, 'id', 'code', RoleType.MEMBER.id)) %></div>
      <%= submit_tag 'Invite', class: 'col-sm-3 btn btn-primary form-group' %>
    </div>
  <% end %>
</div>
